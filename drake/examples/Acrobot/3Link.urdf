<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="Acrobot">


  <link name="body_link">
    <inertial>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <mass value="10" />
      <inertia ixx="10" ixy="0" ixz="0" iyy="0.83" iyz="0" izz="10" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1.1" radius="0.05" />
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
    <collision group="toe">
      <origin xyz="0.0 0.0 0.0"/>
      <geometry>
        <sphere radius="0.0103"/>
      </geometry>
    </collision>
  </link>

  <link name="upper_leg_link">
    <inertial>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <geometry>
         <cylinder length="2.1" radius=".05" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <joint name="hip" type="continuous">
    <parent link="body_link" />
    <child link="upper_leg_link" />
    <origin xyz="0 0.1 -1" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

  <transmission type="SimpleTransmission" name="elbow_trans">
    <actuator name="hip" />
    <joint name="hip" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>



  <link name="lower_leg_link">
    <inertial>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <geometry>
         <cylinder length="2.1" radius=".05" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1" />
      </material>
    </visual>
  </link>

  <joint name="knee" type="continuous">
    <parent link="upper_leg_link" />
    <child link="lower_leg_link" />
    <origin xyz="0 0.1 -2" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

  <transmission type="SimpleTransmission" name="knee_trans">
    <actuator name="knee" />
    <joint name="knee" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
  
  <frame name="foot" link="lower_leg_link" xyz="0 0 -2.1" rpy="0 0 0" />
</robot>
